<h1><%=@menu.name%></h1>
<h4>Entrees:</h4>
<ul>

  <%@menu.entrees.each do |entree|%>
    <li>Entree:<%=entree.name%></li>
      <ul>
      Description: <%= entree.description %><br>
      Ingredients: <%= entree.ingredients %>
      </ul>
  <%end%>

  <p>
    WARNING! If you wish to delete all please click below:<br>
    <form action="/menus/<%=@menu.id%>/delete" method="post">
      <input type="submit" value="DELETE"></p>
    </form>
  </p>

</ul>
